{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "sourceMap": true,
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "api"],
  "exclude": ["node_modules"]
}